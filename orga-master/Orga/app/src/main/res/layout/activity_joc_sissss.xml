        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/midaNormal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:fontFamily="@font/happymonkey_regular"
        android:paddingHorizontal="30dp"/>


    <ImageView
        android:id="@+id/imagenJuegoSeis"
        android:layout_width="163dp"
        android:layout_height="148dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/drawing1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1joc9" />

    <ImageView
        android:id="@+id/imagenJuegoSeis1"
        android:layout_width="264dp"
        android:layout_height="161dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/jocorgueantic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
