<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fontFamily="@font/happymonkey_regular"
    >

    <fragment
        android:id="@+id/fragment_id"
        android:name="app.david.orgue.preferencias.Buto"
        android:layout="@layout/fragment_botones"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="FragmentTagUsage"
        tools:layout="@layout/fragment_botones" />

    <TextView
        android:id="@+id/descripciojoc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/joc3"
        android:layout_marginHorizontal="20dp"
        android:textSize="@dimen/midaNormal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:fontFamily="@font/happymonkey_regular"
        android:paddingHorizontal="30dp" />


    <ImageView
        android:id="@+id/imagenJoc3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/orgueantic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripciojoc3" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/fallosJoc3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagenJoc3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/fallos"
        android:textAlignment="center"
        android:textSize="@dimen/midaPetita"
        android:fontFamily="@font/happymonkey_regular"

        />

    <app.david.orgue.MyImageView
        android:id="@+id/imagen2Joc3"
        android:layout_width="260dp"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/drawing0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fallosJoc3" />

    <Button
        android:id="@+id/seguent"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        android:text="seguent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>