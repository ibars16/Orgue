<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleAgradecimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="ORGUE DE VALLS"
        android:textColor="@color/border_color"
        android:textStyle="bold"
        android:letterSpacing="0.050"
        android:textSize="25sp"
        android:fontFamily="@font/happymonkey_regular"

        />

    <View
        android:id="@+id/linea1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:minHeight="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/titleAgradecimientos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/agraimentsespecials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linea1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:text="Agraïments especials"
        android:textColor="@color/border_color"
        android:textSize="18sp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        />

    <ScrollView
        android:id="@+id/scrollAgraiments"
        android:layout_width="405dp"
        android:layout_height="360dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textJaume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Institut Jaume Huguet"
                android:layout_marginStart="80px"
                android:textStyle="bold"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textJaumeUrl"
                android:layout_width="176dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="www.institutjaumehuguet.cat"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toBottomOf="@+id/textJaume" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarInnova"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/innova"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textInnova"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Innova FP"
                android:layout_marginStart="80px"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarInnova"
                app:layout_constraintTop_toBottomOf="@+id/textJaumeUrl" />

            <TextView
                android:id="@+id/textInnovaUrl"
                android:layout_width="176dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="www.innovafp.cat"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarInnova"
                app:layout_constraintTop_toBottomOf="@+id/textInnova" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarOrga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/orguelogo"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatarInnova"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textOrga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Orgue de valls"
                android:layout_marginStart="80px"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarOrga"
                app:layout_constraintTop_toBottomOf="@+id/textInnovaUrl" />

            <TextView
                android:id="@+id/textOrgaUrl"
                android:layout_width="176dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="www.orguevalls.cat"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarOrga"
                app:layout_constraintTop_toBottomOf="@+id/textOrga" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarTarragona"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/diputacio"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatarOrga"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textTarragona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Diputació de Tarragona"
                android:layout_marginStart="80px"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarTarragona"
                app:layout_constraintTop_toBottomOf="@+id/textOrgaUrl" />

            <TextView
                android:id="@+id/textTarragonaUrl"
                android:layout_width="176dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="www.dipta.cat"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarTarragona"
                app:layout_constraintTop_toBottomOf="@+id/textTarragona" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarAjuntament"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ajuntament"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatarTarragona"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textAjuntament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Ajuntament de Valls"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarAjuntament"
                app:layout_constraintTop_toBottomOf="@+id/textTarragonaUrl" />

            <TextView
                android:id="@+id/textAjuntamentUrl"
                android:layout_width="176dp"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="www.valls.cat"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarAjuntament"
                app:layout_constraintTop_toBottomOf="@+id/textAjuntament" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarParroquia"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/parroquia"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatarAjuntament"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textParroquia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Parròquia de Sant Joan"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarParroquia"
                app:layout_constraintTop_toBottomOf="@+id/textAjuntamentUrl" />

            <TextView
                android:id="@+id/textParroquiatUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:layout_marginStart="80px"
                android:letterSpacing="0.050"
                android:text="Baptista de Valls"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarParroquia"
                app:layout_constraintTop_toBottomOf="@+id/textParroquia" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_avatarEducatiu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/educatiu"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_avatarParroquia"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/circleImageView1"
                app:strokeColor="#BDAED8"
                android:background="#22000000"
                />

            <TextView
                android:id="@+id/textEducatiu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:text="Servei Educatiu de l'Alt Camp"
                android:textColor="@color/border_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarEducatiu"
                app:layout_constraintTop_toBottomOf="@+id/textParroquiatUrl" />

            <TextView
                android:id="@+id/textEducatiuUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/happymonkey_regular"
                android:letterSpacing="0.050"
                android:layout_marginStart="80px"
                android:text="serveiseducatius.xtec.cat/altcamp"
                android:textColor="@color/border_color"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/iv_avatarEducatiu"
                app:layout_constraintTop_toBottomOf="@+id/textEducatiu" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/linea2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:minHeight="1dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollAgraiments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/agraimentsespecials1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linea2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:text="Sobre de"
        android:textColor="@color/border_color"
        android:textSize="18sp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        />

    <TextView
        android:id="@+id/textJaume1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Versió 1.0.0"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials1" />


    <TextView
        android:id="@+id/textJaume2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Dissenyat per David Ibars Casaponsa"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJaume1" />


    <TextView
        android:id="@+id/textJaume3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Creat / Desenvolupat per David Ibars Casaponsa"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJaume2" />




</androidx.constraintlayout.widget.ConstraintLayout>