<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titleAgradecimientos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="ORGUE DE VALLS"
        android:textColor="@color/border_color"
        android:textStyle="bold"
        android:letterSpacing="0.050"
        android:textSize="25sp"
        android:fontFamily="@font/happymonkey_regular"

        />

    <View
        android:id="@+id/linea1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:minHeight="1dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/titleAgradecimientos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/agraimentsespecials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linea1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:text="Agraïments especials"
        android:textColor="@color/border_color"
        android:textSize="18sp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView1"
        app:strokeColor="#BDAED8"
        android:background="#22000000"
        />

    <TextView
        android:id="@+id/textJaume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Institut Jaume Huguet"
        android:layout_marginStart="80px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials" />

    <TextView
        android:id="@+id/textJaumeUrl"
        android:layout_width="176dp"
        android:layout_height="8dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:layout_marginStart="80px"
        android:text="www.institutjaumehuguet.cat"
        android:textColor="@color/border_color"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatarInnova"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/innova"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView1"
        app:strokeColor="#BDAED8"
        android:background="#22000000"
        />

    <TextView
        android:id="@+id/textInnova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Innova FP"
        android:layout_marginStart="80px"
        android:textColor="@color/border_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textJaumeUrl" />

    <TextView
        android:id="@+id/textInnovaUrl"
        android:layout_width="176dp"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:layout_marginStart="80px"
        android:text="www.innovafp.cat"
        android:textColor="@color/border_color"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textInnova" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatarOrga"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/orguelogo"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatarInnova"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/circleImageView1"
        app:strokeColor="#BDAED8"
        android:background="#22000000"
        />

    <TextView
        android:id="@+id/textOrga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Orgue de valls"
        android:layout_marginStart="80px"
        android:textColor="@color/border_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textInnovaUrl" />

    <TextView
        android:id="@+id/textOrgaUrl"
        android:layout_width="176dp"
        android:layout_height="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:layout_marginStart="80px"
        android:text="www.orguevalls.cat"
        android:textColor="@color/border_color"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/textOrga" />
    <View
        android:id="@+id/linea2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        android:minHeight="1dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatarOrga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        />

    <TextView
        android:id="@+id/agraimentsespecials1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linea2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:text="Sobre de"
        android:textColor="@color/border_color"
        android:textSize="18sp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        />

    <TextView
        android:id="@+id/textJaume1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Versió 1.0.0"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agraimentsespecials1" />


    <TextView
        android:id="@+id/textJaume2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Dissenyat per David Ibars Casaponsa"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJaume1" />


    <TextView
        android:id="@+id/textJaume3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/happymonkey_regular"
        android:letterSpacing="0.050"
        android:text="Creat / Desenvolupat per David Ibars Casaponsa"
        android:layout_marginStart="145px"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textJaume2" />


</androidx.constraintlayout.widget.ConstraintLayout>