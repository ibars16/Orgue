<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource"
    android:fontFamily="@font/happymonkey_regular"

    >



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contaonerr"
        android:layout_width="400dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:scaleType="centerCrop"
        android:background="@android:color/white"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagenFondoPreferencias"
        android:layout_width="400dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="@+id/contaonerr"
        app:layout_constraintStart_toStartOf="@+id/contaonerr"
        app:layout_constraintEnd_toEndOf="@+id/contaonerr"
        app:layout_constraintBottom_toBottomOf="@+id/contaonerr"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:scaleType="centerCrop"
        android:alpha="0.45"
        android:src="@drawable/orga5" />

    <TextView
        android:fontFamily="@font/happymonkey_regular"
        android:id="@+id/titulPrefences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Preferències"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/medidorMusica"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titulPrefences"
        app:layout_constraintEnd_toEndOf="@+id/imagenFondoPreferencias"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/textMedidorMusica"
        android:layout_width="wrap_content"
        android:fontFamily="@font/happymonkey_regular"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulPrefences"
        app:layout_constraintStart_toStartOf="@+id/imagenFondoPreferencias"
        android:text="Volum Música"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        />

    <SeekBar
        android:id="@+id/medidorSo"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textMedidorMusica"
        app:layout_constraintEnd_toEndOf="@+id/imagenFondoPreferencias"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/textMedidorSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMedidorMusica"
        app:layout_constraintStart_toStartOf="@+id/imagenFondoPreferencias"
        android:text="Volum Sons"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/happymonkey_regular"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/border_color"
        />

    <Button
        android:id="@+id/guardarPreferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMedidorSo"
        app:layout_constraintEnd_toEndOf="@+id/imagenFondoPreferencias"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/happymonkey_regular"
        android:text="Guardar"
        android:layout_marginRight="100dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:id="@+id/salirPreferencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMedidorSo"
        app:layout_constraintStart_toStartOf="@+id/imagenFondoPreferencias"
        android:layout_marginStart="100dp"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/happymonkey_regular"
        android:text="Sortir"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        />

